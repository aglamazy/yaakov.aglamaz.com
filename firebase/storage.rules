rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to translation files
    match /translations/{locale} {
      allow read: if true;
      allow write: if false; // Only server-side can write
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
